<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/stations">Bus System</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/stations">Staions</a></li>
        <li><a href="/lines">Lines</a></li>
      </ul>
      <form action="/stations" method="get" class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input name="search" type="text" class="form-control" placeholder="Search line or station">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
      </form>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


  <div class="container">
    <%= yield %>
    <% if flash[:alert] || flash[:notice] %>
      <hr>
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <hr>
    <% end %>

  </div>

</body>
</html>

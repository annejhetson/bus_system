<%= form_for(@line) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <% @stations.each do |station| %>
      <%= check_box_tag "station_ids[]", station.id, @line.station_ids.include?(station.id) %>
      <%= station.name %><br>
    <% end %>
  </div>

  <%= f.submit(:class => "btn btn-warning", :id => "margin") %>
<% end %>

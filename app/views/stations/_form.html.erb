<%= form_for(@station) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <% @lines.each do |line| %>
      <%= check_box_tag "line_ids[]", line.id, @station.line_ids.include?(line.id) %>
      <%= line.name %><br>
    <% end %>
  </div>

  <%= f.submit(:class => "btn btn-warning", :id => "margin") %>
<% end %>
